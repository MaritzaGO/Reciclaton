<p id="notice"><%= notice %></p>

<h1>Listing Supplies</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Residue</th>
      <th>Supplied monthly quantity</th>
      <th>Stock</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.client_id %></td>
        <td><%= supply.residue_id %></td>
        <td><%= supply.supplied_monthly_quantity %></td>
        <td><%= supply.stock %></td>
        <td><%= supply.state %></td>
        <td><%= link_to 'Show', supply %></td>
        <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

