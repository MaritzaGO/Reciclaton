<%= form_for(Client.new, as: :client, url: client_session_path) do |f| %>
  <div class="alert alert-danger errors" style="display: none"></div>

<div >

  <div class= "row">
      <div class="col-md-10 col-md-offset-2">

        <div class="form-group" placeholder="Ingrese correo electrónico">
          <%= f.label :email, "Correo electrónico" %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group" placeholder="Ingrese contraseña">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>


        <div class="form-group">
          <%= f.submit "Iniciar", class: "btn btn-success btn-lg" %>
        </div>


        <p><%= link_to "Iniciar sesión con Facebook", client_omniauth_authorize_path(:facebook)%></p> 

        <p><%= link_to "Registrarme", new_client_registration_path %></p>

  </div>
    </div>

</div>

<% end %>
