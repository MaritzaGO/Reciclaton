

<div class="login">

        <div class= "row">
          <div class="col-md-4 col-md-offset-4">


    

        <h2>Inicio de sesion</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field" placeholder="Ingrese correo electrónico">
            <%= f.label :email, "Correo electrónico"%><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field" placeholder="Ingrese Contraseña">
            <%= f.label :password, "Contraseña" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Recordarme" %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Iniciar" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

        

        <%= link_to "Iniciar sesion con Facebook", client_omniauth_authorize_path(:facebook)%> 

        <span class="resp-info"></span>

    </div>
  </div>
  

</div>


<%= form_for(Client.new, as: :client, url: client_session_path) do |f| %>

    <div class="alert alert-danger errors" style="display: none"></div>

      <div class="login">

            <div class= "row">
              <div class="col-md-4 col-md-offset-4">

                <h2>Inicio de sesion</h2>

                          <div class="form-group" placeholder="Ingrese correo electrónico">
                            <%= f.label :email, "Correo electrónico"%><br />
                            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                          </div>

                          <div class="form-group" placeholder="Ingrese contraseña">
                            <%= f.label :password, "Contraseña" %><br />
                            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                          </div>

                          <% if devise_mapping.rememberable? -%>
                            <div class="form-group">
                              <%= f.check_box :remember_me, class: 'form-control' %>
                              <%= f.label :remember_me, "Recordarme" %>
                            </div>
                          <% end -%>

                            <div class="actions">
                              <%= f.submit "Iniciar", class: "btn btn-success btn-lg" %>
